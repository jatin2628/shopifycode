<hr>
<h1>Our Products</h1>
<div class="row mx-2 my-2">

<% if(products.length>0){ %>
  <% for(var i=0; i < products.length; i++) { %>
<div class="card mx-2 my-2" style="width: 17rem;">
  <a href="/product/<%= products[i].variants[0].product_id %>"><img src="<%= ((products[i].image) == null) ? null : products[i].image.src %>" class="card-img-top" alt="..."></a>
    <div class="card-body">
      <a href="/product/<%= products[i].variants[0].product_id %>"><h5 class="card-title"><%= products[i].title %></h5></a>
      <p class="card-text"><%= products[i].variants[0].price %></p>
    </div>
  </div>
  <% }} %>
    
</div>
  <footer class="bg-black text-center text-light" >
    <p class="pb-5">copyright &copy; jtstore2 2023</p>
  </footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>
</html>